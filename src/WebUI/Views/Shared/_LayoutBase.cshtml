@using MvcGlobalisationSupport
@using ServiceStack.Html
@using ServiceStack.Mvc
@using WebUI.Helpers
@using WebUI.Resources
<!DOCTYPE html>
<html lang="en">
    <head id="LanGerman">
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Nombre.Proyecto</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <link href="@Url.GetStaticContent("/default.css")" rel="stylesheet" type="text/css" />
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="languages">
                            <li>@Html.GlobalisedRouteLink(Global.LangEnglish, "en", ViewContext.RouteData)</li>
                            <li>@Html.GlobalisedRouteLink(Global.LangGerman, "de", ViewContext.RouteData)</li>
                            <li>@Html.GlobalisedRouteLink(Global.LangFrench, "fr", ViewContext.RouteData)</li>
                            <li>@Html.GlobalisedRouteLink(Global.LangItalian, "it", ViewContext.RouteData)</li>
                        </ul>
                    </nav>
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Nombre.Proyecto</p>
                </div>
            </div>
        </footer>
        <script type="text/javascript">
            window.BASE_URL = '@Url.Content("~")';
        </script>

        @Scripts.Render("~/bundles/jquery")
               
        @RenderSection("scripts", required: false)
        
        @ServiceStack.MiniProfiler.Profiler.RenderIncludes().AsRaw() 
    </body>
</html>
